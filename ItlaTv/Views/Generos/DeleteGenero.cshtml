@model Application.ViewModels.SaveGeneroViewModel
@{
    bool editModel = Model.IdGenero == 0 ? false : true;
    ViewData["Title"] = "Eliminar Género";
}

<h1 class="text-primary font-weight-bold">Eliminar Género</h1>
<hr />

<form method="post" asp-controller="Generos" asp-action="DeleteGeneroPost">
    <div>
        <p class="">¿Estas seguro de que deseas eliminar a "<span style="font-weight:bold">@Model.Nombre</span>" del catálogo de <span class="text-decoration-underline">géneros</span>?</p>

        <input type="hidden" asp-for="IdGenero" />
        <hr />

        <button type="submit" class="btn btn-primary">Borrar</button>
        <a asp-controller="Generos" asp-action="Index" class="btn btn-success">Volver Atrás</a>
    </div>
</form>
